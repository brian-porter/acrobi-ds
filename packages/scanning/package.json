    "@zxing/browser": {
      "optional": true
    }
  },
  "devDependencies": {
    "@acrobi/tsconfig": "workspace:*",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "typescript": "^5.0.0",
    "tsup": "^8.0.0",
    "vitest": "^2.0.0",
    "eslint": "^8.0.0"
  },
  "keywords": [
    "acrobi",
    "barcode",
