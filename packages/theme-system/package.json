{
  "name": "@acrobi/theme-system",
  "version": "1.0.0-alpha.1",
  "description": "Dynamic theming system with CSS custom properties for Acrobi applications",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./themes/*": "./src/themes/*"
  },
  "files": [
    "dist",
    "src",
    "acrobi.json",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "lint": "eslint src/",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {},
  "peerDependencies": {
    "react": "^18.0.0"
  },
  "devDependencies": {
    "@acrobi/tsconfig": "workspace:*",
    "@types/react": "^18.0.0",
    "typescript": "^5.0.0",
    "tsup": "^8.0.0",
    "vitest": "^2.0.0",
    "eslint": "^8.0.0"
  },
  "keywords": [
    "acrobi",
    "theme",
    "design-tokens",
    "css-variables",
    "dark-mode",
    "theming"
  ],
  "author": "Acrobi",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/acrobi/acrobi-design-system",
    "directory": "packages/theme-system"
  }
}
