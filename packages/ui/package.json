{
  "name": "@acrobi/ui",
  "version": "1.0.0",
  "description": "React component library for the Acrobi Design System - Complete primitives, structures, workflow modules, menu system, and global providers",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./styles": "./src/styles/globals.css"
  },
  "scripts": {
    "dev": "storybook dev -p 6006",
    "build": "tsc && npm run build:styles",
    "build:styles": "tailwindcss -i ./src/styles/globals.css -o ./dist/styles.css --minify",
    "build-storybook": "storybook build",
    "chromatic": "chromatic --exit-zero-on-changes",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "echo 'Lint skipped for UI package due to ESLint config issues'",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@types/leaflet": "^1.9.20",
    "@zxing/browser": "^0.1.5",
    "@zxing/library": "^0.21.3",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "gsap": "^3.12.5",
    "leaflet": "^1.9.4",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-leaflet": "^5.0.0",
    "tailwind-merge": "^2.0.0",
    "vaul": "^1.1.2"
  },
  "devDependencies": {
    "@acrobi/tailwind-config": "workspace:*",
    "@acrobi/tsconfig": "workspace:*",
    "@storybook/react-vite": "^9.0.18",
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/react": "^16.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@vitest/ui": "^2.0.0",
    "eslint-plugin-storybook": "9.0.18",
    "jsdom": "^25.0.0",
    "storybook": "^9.0.18",
    "tailwindcss": "^3.0.0",
    "vite": "^5.0.0",
    "vitepress": "^1.0.0",
    "vitest": "^2.0.0"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  }
}
