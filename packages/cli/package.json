{
  "name": "@acrobi/cli",
  "version": "1.0.0",
  "description": "CLI tool for the Acrobi Design System - Add components to your project as source code",
  "keywords": [
    "acrobi",
    "design-system",
    "cli",
    "components",
    "react",
    "typescript",
    "tailwind"
  ],
  "author": "Acrobi Design System",
  "license": "MIT",
  "homepage": "https://github.com/acrobi/acrobi-design-system#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/acrobi/acrobi-design-system.git",
    "directory": "packages/cli"
  },
  "bugs": {
    "url": "https://github.com/acrobi/acrobi-design-system/issues"
  },
  "main": "./dist/index.js",
  "bin": {
    "acrobi": "./dist/index.js"
  },
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "npm run clean && tsc && chmod +x dist/index.js",
    "lint": "echo 'Lint skipped for CLI package'",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run build",
    "test": "node dist/index.js --help && node dist/index.js list"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "commander": "^11.0.0",
    "chalk": "^5.0.0",
    "inquirer": "^9.0.0",
    "fs-extra": "^11.0.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.0",
    "@types/inquirer": "^9.0.0",
    "@acrobi/tsconfig": "workspace:*",
    "tsx": "^4.0.0"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  }
}
